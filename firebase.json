{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": ".",
    "ignore": [
      "database.rules.json",
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites" : [
      {
        "source" : "/selos",
        "destination" : "/selos.html"
      },
      {
        "source" : "/bases",
        "destination" : "/bases.html"
      }
    ]
  }
}
